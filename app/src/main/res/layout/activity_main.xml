<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorToolbar"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"  />

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:text="@string/titulo"
            android:textColor="#666666"
            android:textSize="20sp" />

    </LinearLayout>

        <!-- Exchange Rate Display -->

        <!-- textview fecha-->


        <!-- from seccion-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="From"
            android:textSize="16sp"
            android:textColor="#666666"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/currency_card_background"
            android:elevation="2dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <EditText
                android:id="@+id/txtconvertir"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:cursorVisible="true"
                android:focusable="false"
                android:fontFamily="sans-serif"
                android:hint="0.00"
                android:inputType="numberDecimal"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imgOrigen"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/flag_usa" />

                <Spinner
                    android:id="@+id/sporigen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="60dp" />

            </LinearLayout>
        </LinearLayout>

        <!-- FrameLayout linea del swap button -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginVertical="20dp">

            <!-- Línea horizontal -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="#5F5A5A" />

            <!-- Botón swap centrado -->
            <Button
                android:id="@+id/btnconvertir"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:backgroundTint="#FFD700"
                android:elevation="6dp"
                android:padding="12dp"
                app:cornerRadius="28dp"
                app:icon="@drawable/swap"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="24dp"
                />
        </FrameLayout>


        <!-- To Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To"
            android:textSize="16sp"
            android:textColor="#666666"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/currency_card_background"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:layout_marginBottom="30dp"
            android:elevation="2dp">

            <TextView
                android:id="@+id/txtresult"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:textSize="24sp"
                android:textColor="#333333" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/spinner_background"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:srcCompat="@drawable/flag_usa"
                    android:layout_marginEnd="8dp"/>

                <Spinner
                    android:id="@+id/spdestino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="60dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Keypad numerico -->
        <GridLayout
            android:id="@+id/keypad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="4"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp">

            <!-- Botones numéricos -->
            <Button
                android:id="@+id/btn1"
                style="@style/KeyStyle"
                android:text="1"
                app:cornerRadius="4dp" />

            <Button
                android:id="@+id/btn2"
                style="@style/KeyStyle"
                android:text="2"
                app:cornerRadius="4dp" />

            <Button
                android:id="@+id/btn3"
                style="@style/KeyStyle"
                android:text="3"
                app:cornerRadius="4dp" />

            <Button
                android:id="@+id/btn4"
                style="@style/KeyStyle"
                android:text="4"
                app:cornerRadius="4dp" />

            <Button
                android:id="@+id/btn5"
                style="@style/KeyStyle"
                android:text="5"
                app:cornerRadius="4dp" />

            <Button
                android:id="@+id/btn6"
                style="@style/KeyStyle"
                android:text="6"
                app:cornerRadius="4dp" />

            <Button
                android:id="@+id/btn7"
                style="@style/KeyStyle"
                android:text="7"
                app:cornerRadius="4dp" />

            <Button
                android:id="@+id/btn8"
                style="@style/KeyStyle"
                android:text="8"
                app:cornerRadius="4dp" />

            <Button
                android:id="@+id/btn9"
                style="@style/KeyStyle"
                android:text="9"
                app:cornerRadius="4dp" />

            <Button
                android:id="@+id/btnpunto"
                style="@style/KeyStyle"
                android:text="."
                app:cornerRadius="4dp" />

            <Button
                android:id="@+id/btn0"
                style="@style/KeyStyle"
                android:text="0"
                app:cornerRadius="4dp" />

            <Button
                android:id="@+id/btnatras"
                style="@style/KeyStyle"
                android:text="←"
                app:cornerRadius="4dp" />
        </GridLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>